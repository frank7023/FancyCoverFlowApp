<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhh.fancycoverflowapp.MainActivity">

    <com.zhh.fancycoverflowapp.fancycoverflow.FancyCoverFlow
        android:id="@+id/main_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:actionDistance="0x7FFFFFFF"
        app:maxRotation="0"
        app:scaleDownGravity="0.5"
        app:unselectedAlpha="0.8"
        app:unselectedSaturation="1.0"
        app:unselectedScale="0.55" />
</RelativeLayout>
